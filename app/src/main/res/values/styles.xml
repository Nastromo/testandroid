<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/OpenSansRegular</item>
        <item name="android:colorBackground">@color/colorWhite</item>
    </style>

    <style name="AppThemeScroll" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/OpenSansRegular</item>
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:statusBarColor">@color/colorPrimaryMoreLighter</item>
    </style>

    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:textViewStyle">@style/OpenSansRegular</item>
        <item name="android:colorBackground">@color/colorWhite</item>
    </style>

    <style name="GreyStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/colorGrey</item>
        <item name="android:textViewStyle">@style/OpenSansRegular</item>
        <item name="android:colorBackground">@color/colorWhite</item>
    </style>

    <style name="AlphaStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="OpenSansRegular" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabIndicatorColor">@color/colorText</item>
        <item name="tabSelectedTextColor">@color/colorText</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">@drawable/rec_gradient</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="textAllCaps">true</item>
        <!-- Do tab text bold
        <item name="android:textStyle">bold</item>
        -->
    </style>

</resources>
